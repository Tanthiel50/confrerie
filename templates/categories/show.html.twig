{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="text-center">{{ category.name }}</h1>
            <div class="container mx-auto mt-4 d-flex justify-content-center">
                <a class="btn display-center" href="{{ path('admin_index')}}">Retour à l'administration</a>
            </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card mt-4">
                    <div class="card-body">
                        <h1 class="card-title">{{ category.name }}</h1>
                        <p class="card-text">{{ category.id }}</p>
                    </div>
                    <a class="btn text-center" href="{{ path('app_categories_edit', {'id': category.id}) }}">Modifier</a>
                    <a class="btn-secondary text-center" href="{{ path('app_categories_index') }}">Retour à la liste des catégories</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

