{% extends 'base.html.twig' %}

{% block title %}Categories index
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Liste des catégories</h1>
		<div class="container mx-auto mt-4 d-flex justify-content-center">
			<a class="btn display-center" href="{{ path('admin_index')}}">Retour à l'administration</a>
            <a class="btn-secondary display-center" href="{{ path('app_categories_new') }}">Créer une nouvelle catégorie</a>
		</div>
	</div>
	<div class="container mx-auto mt-4">
		<div class="row">
			{% for category in categories %}
				<div
					class="col-md-4">
					<!-- Chaque carte prend 4 colonnes et a une marge en bas -->
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{ category.name }}</h5>
							<p class="card-text">{{ category.id }}</p>
							<a href="{{ path('app_categories_show', {'id': category.id}) }}" class="btn mr-2">
								Voir</a>
							<a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn ">
								Modifier</a>
						</div>
					</div>
				</div>
			{% endfor %}
        </div>
    </div>
