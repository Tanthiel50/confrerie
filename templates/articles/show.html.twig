{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}


{% block body %}
    <div class="container">
    <h1 class="text-center">{{ article.title }}</h1>
            <div class="container mx-auto mt-4 d-flex justify-content-center">
                <a class="btn display-center" href="{{ path('admin_index')}}">Retour à l'administration</a>
            </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card mt-4">
                    <div class="card-body">
                        <img src={{ asset('./uploads/articles/'~ article.img) }} class="card-img-top" alt="...">
                        <h1 class="card-title">{{ article.title }}</h1>
                        <p class="card-text">{{ article.content }}</p>
                        <p class="card-text">ID de l'article: {{ article.id }}</p>
                        <p class="card-text">Date de l'article: {{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</p>
                    </div>
                    <a class="btn text-center" href="{{ path('app_articles_edit', {'id': article.id}) }}">Modifier</a>
                    <a class="btn-secondary text-center" href="{{ path('app_articles_index') }}">Retour à la liste des articles</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

