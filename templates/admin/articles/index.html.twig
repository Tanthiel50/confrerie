{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}


{% block body %}
    <div class="container">
        <h1 class="text-center">Liste des articles</h1>
            <div class="container mx-auto mt-4 d-flex justify-content-center">
                <a class="btn display-center" href="{{ path('admin_index')}}">Retour à l'administration</a>
                <a class="btn-secondary display-center" href="{{ path('app_articles_new') }}">Créer un nouvel article</a>
            </div>
            </div>
            <div class="container mx-auto mt-4">
                <div class="row">
                    {% for article in articles %}
                    <div class="col-md-4"> <!-- Chaque carte prend 4 colonnes et a une marge en bas -->
                            <div class="card" style="width: 18rem;">
        						<img src={{ asset('./uploads/articles/'~ article.img) }} class="card-img-top" alt="...">
        						<div class="card-body">
        							<h5 class="card-title">{{ article.title }}</h5>
        							<h6 class="card-subtitle mb-2 text-muted">Par {{ article.user.firstName }}</h6>
        							<p class="card-text">{{ article.content|slice(0, 100) }}{% if article.content|length > 100 %}...{% endif %}</p>
        							<a href="{{ path('app_articles_show', {'id': article.id}) }}" class="btn mr-2">
        								Voir</a>
        							<a href="{{ path('app_articles_edit', {'id': article.id}) }}" class="btn ">
        								Modifier</a>
        						</div>
        					</div>
                        </div>
                        {% endfor %}
                </div>
            </div>
        
