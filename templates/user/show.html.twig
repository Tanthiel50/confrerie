{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="text-center">{{ user.firstName }} {{ user.lastName }}</h1>
            <div class="container mx-auto mt-4 d-flex justify-content-center">
                <a class="btn display-center" href="{{ path('admin_index')}}">Retour à l'administration</a>
            </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card mt-4">
                    <div class="card-body">
                        <img src={{ asset('./uploads/user/'~ user.img) }} class="card-img-top" alt="...">
                        <h1 class="card-title">{{ user.email }}</h1>
                        <p class="card-text">{{ user.roles ? user.roles|json_encode : '' }}</p>
                    </div>
                    <a class="btn text-center" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                    <a class="btn-secondary text-center" href="{{ path('app_user_index') }}">Retour à la liste des utilisateurs</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

