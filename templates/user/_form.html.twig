{% block title %} {% endblock %}
{% block body %}

{{ form_start(form, {'attr': {'class': 'form'}}) }}
<div class="container">
    {# Champ 'title' #}
    <div class="form-group">
        {{ form_label(form.firstName, 'Pr√©nom') }}
        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.firstName) }}
    </div>

    {# Champ 'content' #}
    <div class="form-group">
        {{ form_label(form.lastName, 'Nom') }}
        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.lastName) }}
    </div>

    {# Champ 'date' #}
    <div class="form-group">
        {{ form_label(form.roles, 'Roles') }}
        {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.roles) }}
    </div>

    {# Champ 'category' #}
    <div class="form-group">
        {{ form_label(form.email, 'Email') }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>

    {# Champ 'img' (Fichier) #}
    <div class="form-group">
        {% if user.img %}
            <img src="{{ asset('./uploads/user/'~ user.img) }}" alt="Image actuelle" style="max-width: 30%; height: auto;" />
        {% endif %}
        {{ form_label(form.img, 'Image') }}
        {{ form_widget(form.img, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.img) }}
    </div>

    {# Champ 'slug' #}
    <div class="form-group">
        {{ form_label(form.password, 'Mot de passe') }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.password) }}
    </div>


    {# Bouton de soumission #}
    <button type="submit" class="btn btn-primary">Enregistrer</button>
</div>

{{ form_end(form) }}

{% endblock %}

